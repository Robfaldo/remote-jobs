<% @jobs.each do |job| %>
  <li class="job">
    <a class="job-details-container" href=<%= job.job_link %>>

      <div class="job-details">
        <span class="title"><%= job.title.downcase %></span>
        <span class="company"><%= job.company %></span>

        <div class="tags-container">
          <div class="location non-filter-tag">
            <div class="location-image"></div>
            <div class="location-text">
              <%= job.location %>
            </div>
          </div>

          <% if job.requires_experience? %>
            <div class="requires-experience tag">Requires experience</div>
          <% end %>

          <% if job.requires_stem_degree? %>
            <div class="requires-stem-degree tag">Requires degree</div>
          <% end %>
        </div>
      </div>
    </a>
  </li>
<% end %>