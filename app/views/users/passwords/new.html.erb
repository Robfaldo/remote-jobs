<%= render :partial => "shared/flash_messages" %>

<div class="sign-up-page">
  <div class="account-page">
    <div class="content">
      <a class="logo" href="/">PrimoDev</a>
      <h3 class="sub-title">Forgot your password?</h3>

      <div class="form-container">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="fields-container">
            <div class="field">
              <%= f.label :email %><br />
              <div class="form-field-container">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
              </div>
            </div>
          </div>

          <div class="actions account-button">
            <%= f.submit "Reset password", class: 'shared-button', id: 'send-pwd-instructions' %>
          </div>
        <% end %>
      </div>
      <div class="account-links">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>