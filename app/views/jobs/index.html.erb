    </td>
  </div>
  <div class="checkbox">
    <td>
      <%= label_tag(:mid, "Mid") %>
      <%= check_box 'mid', 'is_checked', {}, 'true', 'false' %>
    </td>
  </div>
  <div class="checkbox">
    <td>
      <%= label_tag(:senior, "Senior") %>
      <%= check_box 'senior', 'is_checked', {}, 'true', 'false' %>
    </td>
  </div>
  <div class="checkbox">
    <td>
