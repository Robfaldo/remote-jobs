    </td>
  </div>
  <div class="checkbox">
    <td>
      <%= label_tag(:staff, "Staff") %>
      <%= check_box 'staff', 'is_checked', {}, 'true', 'false' %>
    </td>
  </div>

  <div class="checkbox">
    <td>
      <%= label_tag(:backend, "Back-end") %>
      <%= check_box 'backend', 'is_checked', {}, 'true', 'false' %>
    </td>
  </div>
  <div class="checkbox">
    <td>
      <%= label_tag(:frontend, "Front-end") %>
      <%= check_box 'frontend', 'is_checked', {}, 'true', 'false' %>
    </td>
  </div>
  <div class="checkbox">
    <td>
      <%= label_tag(:full_stack, "Full-stack") %>
      <%= check_box 'full_stack', 'is_checked', {}, 'true', 'false' %>
    </td>
  </div>
