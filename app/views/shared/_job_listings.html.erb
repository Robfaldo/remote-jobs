<div class="main">
  <div class="jobs-container">
    <div class="filters-container">
      <span id="filter-header">Filter results</span>
      <div class="filter">
        <span class="filter-title">Date Range</span>
        <div class="date-range-container">
          <div class="checkbox-container">
            <div id="js-show-all-jobs" class="filter-box checked-date-filter js-date-range-checkbox"></div>
            <span class="filter-text">Posted anytime</span>
          </div>

          <div class="checkbox-container">
            <div id="js-posted-today" class="filter-box js-date-range-checkbox"></div>
            <span class="filter-text">Posted today</span>
          </div>

          <div class="checkbox-container">
            <div id="js-posted-three-days" class="filter-box js-date-range-checkbox"></div>
            <span class="filter-text">Posted last 3 days</span>
          </div>
        </div>

        <span class="filter-title">Experience</span>
        <div class="experience-container">
          <div class="checkbox-container">
            <div id="js-experience-tag-checkbox" class="filter-box js-experience-tag-checkbox"></div>
            <span class="filter-text"> Show jobs that ask for experience</span>
          </div>
        </div>

        <span class="filter-title">Education</span>
        <div class="experience-container">
          <div class="checkbox-container">
            <div id="js-stem-degree-tag-checkbox" class="filter-box js-experience-tag-checkbox"></div>
            <span class="filter-text"> Show jobs that ask for STEM degree</span>
          </div>
        </div>
      </div>
    </div>

    <ul class=job-listings>
      <h3 class="jobs-found">We have found <span class="jobs-count"></span> jobs</h3>

      <% @jobs.each do |job| %>
        <li class="js-job job js-<%= job.posted_date_range %>">
          <a class="job-details-container" href=<%= job.job_link %>>
            <div class="job-left">
              <span class="title"><%= job.title %></span>
              <span class="company"><%= job.company %></span>

              <div class="tags-container">
                <% if job.requires_experience? %>
                  <div class="requires-experience tag js-experience-job-tag">Asks for experience</div>
                <% end %>

                <% if job.requires_stem_degree? %>
                  <div class="requires-stem-degree tag js-stem-degree-job-tag">Asks for STEM Degree</div>
                <% end %>

                <div class="location non-filter-tag"><%= job.location %></div>
                <div class="posted-date none-filter-tag"><%= job.posted_days_ago %></div>
              </div>

              <% if job.rejected? %>
                </br>
                <span class="rejected-reason">Reason for rejection: <%= job.status_reason %> </span>
              <% end %>

            </div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
